<?xml version="1.0" encoding="UTF-8"?>
<simulation>

  <!-- In this version we have ONE context  -->

  <context id = "gungho_atm">

    <axis_definition>
      <axis id="vert_axis_half_levels" name="half_levels"/>
      <axis id="vert_axis_full_levels" name="full_levels"/>
      <axis id="radiation_levels" name="radiation_levels"/>
      <axis id="land_tiles" name="land_tiles" n_glo="9"/>
      <axis id="surface_tiles" name="surface_tiles" n_glo="11"/>
      <axis id="snow_layers_and_tiles" name="snow_layers_and_tiles" n_glo="27"/>
      <axis id="soil_levels" name="soil_levels" n_glo="4"/>
      <axis id="plant_func_types" name="plant_func_types" n_glo="5"/>
      <axis id="monthly_climatology" name="monthly_climatology" n_glo="12"/>
    </axis_definition>

    <grid_definition>
      <grid id="node_grid">
	<domain domain_ref="node"/>
	<axis axis_ref="vert_axis_full_levels"/>
      </grid>
      <grid id="half_level_face_grid">
	<domain domain_ref="face"/>
	<axis axis_ref="vert_axis_half_levels"/>
      </grid>
      <grid id="full_level_face_grid">
	<domain domain_ref="face"/>
	<axis axis_ref="vert_axis_full_levels"/>
      </grid>
      <grid id="half_level_edge_grid">
	<domain domain_ref="edge"/>
	<axis axis_ref="vert_axis_half_levels"/>
      </grid>
      <grid id="soil_levels_face_grid">
        <domain domain_ref="face"/>
        <axis axis_ref="soil_levels"/>
      </grid>
      <grid id="land_tiles_face_grid">
        <domain domain_ref="face"/>
        <axis axis_ref="land_tiles"/>
      </grid>
      <grid id="snow_layers_face_grid">
        <domain domain_ref="face"/>
        <axis axis_ref="snow_layers_and_tiles"/>
      </grid>
      <grid id="3D_monthly_grid">
	<domain domain_ref="face"/>
	<axis axis_ref="vert_axis_full_levels"/>
	<axis axis_ref="monthly_climatology"/>
      </grid>
      <grid id="pft_monthly_grid">
	<domain domain_ref="face"/>
	<axis axis_ref="plant_func_types"/>
	<axis axis_ref="monthly_climatology"/>
      </grid>
    </grid_definition>

    <file_definition
	type="one_file"
	time_counter="none">

      <!-- File definition for lfric checkpoint read -->
      <file id="lfric_checkpoint_read" name="lfric_checkpoint_read" mode="read" output_freq="1ts" convention="UGRID" cyclic="true" enabled=".FALSE.">
	<field id="read_ew_wind" name="ew_wind" long_name="eastward_wind" standard_name="eastward_wind" unit="m s-1" grid_ref="half_level_face_grid" operation="instant" />
	<field id="read_ns_wind" name="ns_wind" long_name="northward_wind" standard_name="northward_wind" unit="m s-1" grid_ref="half_level_face_grid" operation="instant" />
	<field id="read_upward_wind" name="upward_wind" long_name="upward_air_velocity" standard_name="upward_air_velocity" unit="m s-1" grid_ref="full_level_face_grid" operation="instant" />
	<field id="read_theta" name="theta" long_name="air_potential_temperature" standard_name="air_potential_temperature" unit="K" grid_ref="full_level_face_grid" operation="instant" />
	<field id="read_rho" name="rho" long_name="air_density" unit="1" grid_ref="half_level_face_grid" operation="instant" />
	<field id="read_m_v" name="m_v" long_name="humidity_mixing_ratio"  unit="1" grid_ref="full_level_face_grid" operation="instant" />
	<field id="read_m_cl" name="m_cl" long_name="cloud_liquid_water_mixing_ratio"  unit="1" grid_ref="full_level_face_grid" operation="instant" />
	<field id="read_m_cf" name="m_cf" long_name="cloud_ice_mixing_ratio"  unit="1" grid_ref="full_level_face_grid" operation="instant" />
	<field id="read_m_r" name="m_r" long_name="rain_mixing_ratio"  unit="1" grid_ref="full_level_face_grid" operation="instant" />
	<field id="read_zh" name="zh" long_name="boundary_layer_depth" unit="m" domain_ref="face" operation="instant" />
	<field id="read_area_fraction" name="area_fraction" long_name="cloud_area_fraction" unit="1" grid_ref="full_level_face_grid" operation="instant" />
	<field id="read_bulk_fraction" name="bulk_fraction" long_name="cloud_bulk_fraction" unit="1" grid_ref="full_level_face_grid" operation="instant" />
	<field id="read_liquid_fraction" name="liquid_fraction" long_name="cloud_liquid_fraction" unit="1" grid_ref="full_level_face_grid" operation="instant" />
	<field id="read_frozen_fraction" name="frozen_fraction" long_name="cloud_frozen_fraction" unit="1" grid_ref="full_level_face_grid" operation="instant" />
	<field id="read_z0msea" name="z0msea" long_name="sea_surface_roughness_length" unit="m" domain_ref="face" operation="instant" />

<!-- field for snow_layers_and_tiles functionality 
  <field id="tile_snow_layer_liq_mass" name="tile_snow_layer_liq_mass" long_name="Snow layer liquid mass on tiles" unit="kg m-2" grid_ref="snow_layers_face_grid" operation="instant" />
-->

	<!-- Additional fields for basic_gal -->
	<field id="read_dd_mf_cb" name="dd_mf_cb" long_name="Downdraft massflux at cloud base" unit="Pa s-1" domain_ref="face" operation="instant" />
	<field id="read_tile_snow_mass" name="tile_snow_mass" long_name="Tile snow mass" unit="kg" grid_ref="land_tiles_face_grid" operation="instant" />
	<field id="read_tile_n_snow_layers" name="tile_n_snow_layers" long_name="Number of snow layers on tiles" unit="1" grid_ref="land_tiles_face_grid" operation="instant" />
	<field id="read_tile_snow_depth" name="tile_snow_depth" long_name="Snow depth on tiles" unit="m" grid_ref="land_tiles_face_grid" operation="instant" />
	<field id="read_tile_snow_rgrain" name="tile_snow_rgrain" long_name="Tile snow grain size" unit="microns" grid_ref="land_tiles_face_grid" operation="instant" />
	<field id="read_snow_soot" name="snow_soot" long_name="Snow soot content" unit="kg kg-1" domain_ref="face" operation="instant" />
	<field id="read_tile_snow_under_canopy" name="tile_snow_under_canopy" long_name="Snow under canopy on tiles" unit="m" grid_ref="land_tiles_face_grid" operation="instant" />
	<field id="read_tile_snowpack_density" name="tile_snowpack_density" long_name="Snowpack density on tiles" unit="kg m-3" grid_ref="land_tiles_face_grid" operation="instant" />
	<field id="read_tile_snow_layer_thickness" name="tile_snow_layer_thickness" long_name="Snow layer thickness on tiles" unit="m" grid_ref="snow_layers_face_grid" operation="instant" />
	<field id="read_tile_snow_layer_ice_mass" name="tile_snow_layer_ice_mass" long_name="Snow layer ice mass on tiles" unit="kg m-2" grid_ref="snow_layers_face_grid" operation="instant" />
	<field id="read_tile_snow_layer_liq_mass" name="tile_snow_layer_liq_mass" long_name="Snow layer liquid mass on tiles" unit="kg m-2" grid_ref="snow_layers_face_grid" operation="instant" />
	<field id="read_tile_snow_layer_temp" name="tile_snow_layer_temp" long_name="Snow layer temperature on tiles" unit="K" grid_ref="snow_layers_face_grid" operation="instant" />
	<field id="read_tile_snow_layer_rgrain" name="tile_snow_layer_rgrain" long_name="Snow layer grain size on tiles" unit="microns" grid_ref="snow_layers_face_grid" operation="instant" />
	<field id="read_soil_temperature" name="soil_temperature" long_name="Soil temperature" unit="K" grid_ref="soil_levels_face_grid" operation="instant" />
	<field id="read_soil_moisture" name="soil_moisture" long_name="Soil moisture content" unit="kg kg-1" grid_ref="soil_levels_face_grid" operation="instant" />
	<field id="read_soil_sat_frac" name="soil_sat_frac" long_name="Soil saturated fraction" unit="1" domain_ref="face" operation="instant" />
	<field id="read_water_table" name="water_table" long_name="Water table depth" unit="m" domain_ref="face" operation="instant" />
	<field id="read_wetness_under_soil" name="wetness_under_soil" long_name="Wetness below soil column" unit="1" domain_ref="face" operation="instant" />
	<field id="read_surface_conductance" name="surface_conductance" long_name="Surface conductance" unit="m s-1" domain_ref="face" operation="instant" />
	<field id="read_tile_canopy_water" name="tile_canopy_water" long_name="Canopy water content on tiles" unit="kg m-2" grid_ref="land_tiles_face_grid" operation="instant" />
	<field id="read_tile_temperature" name="tile_temperature" long_name="Tile temperature" unit="K" grid_ref="land_tiles_face_grid" operation="instant" />
	<field id="read_tstar_sea_ice" name="tstar_sea_ice" long_name="Sea ice surface temperature" unit="K" domain_ref="face" operation="instant" />
	<field id="read_sea_ice_temperature" name="sea_ice_temperature" long_name="Sea-ice bulk temperature" unit="K" domain_ref="face" operation="instant" />
  
      </file>

    </file_definition>

  </context>

  <context id = "xios">
    <variable_definition>
      <variable_group id = "buffer">
        <variable id = "optimal_buffer_size" type = "string" >performance</variable>
        <variable id = "buffer_factor_size" type = "double" >1.0</variable>
      </variable_group>

      <variable_group id = "parameters" >
        <variable id = "using_server" type = "bool" >true</variable>
        <variable id = "info_level" type = "int" >50</variable>
        <variable id = "print_file" type="bool">true</variable>
      </variable_group>
    </variable_definition>
  </context>

</simulation>
